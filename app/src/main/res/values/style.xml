<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    <style name="AppTheme" parent="Theme.AppCompat.DayNight">-->
<!--        <item name="android:windowBackground">@color/main</item>-->
<!--    </style>-->

    <style name="BoldText" parent="android:TextAppearance">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/spoqa</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NormalText" parent="android:TextAppearance">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/spoqa</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BasicButton" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/spoqa</item>
    </style>

    <style name="FullScreenDialogFragment" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_24dp_top</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- And then this will be needed -->
        <!--        <item name="android:navigationBarColor">@color/bottom_sheet_background</item>-->
        <item name="android:colorBackground">@color/black</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
</resources>