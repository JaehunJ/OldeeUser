<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="data"
            type="com.oldee.user.network.response.PaymentListItem" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:text="@{data.creationDate}"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="24dp"
            style="@style/NormalText"
            android:id="@+id/tv_date"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_0"
            tools:text="2021.08.21"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sub"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="2"
            tools:listitem="@layout/layout_order_log_sub_item"/>

        <android.widget.Button
            android:id="@+id/btn_detail"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:textSize="14dp"
            style="@style/NormalText"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:background="@drawable/bg_round_8dp_stroke_gray_1"
            android:text="상세보기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/sky_1"/>
    </LinearLayout>
</layout>
