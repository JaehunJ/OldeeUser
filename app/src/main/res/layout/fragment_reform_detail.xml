<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="res"
            type="com.oldee.user.network.response.DesignDetailData" />

        <variable
            name="vm"
            type="com.oldee.user.ui.design.detail.ReformDetailViewModel" />
    </data>

    <LinearLayout
        tools:context=".ui.design.detail.ReformDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                style="@style/BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디자인"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_arr_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/ll_skeleton"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    >
                    <include layout="@layout/skeleton_reform_detail"
                        android:id="@+id/skeleton_detail"/>

                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="gone"
                    android:id="@+id/cl_design_detail"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:translationZ="1dp"
                        android:outlineProvider="@null"
                        android:elevation="0dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="25dp"
                        android:background="@drawable/bg_circle_white"
                        android:backgroundTint="@color/gray_3"
                        app:layout_constraintBottom_toBottomOf="@id/vp_image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vp_image" />


                    <LinearLayout
                        android:id="@+id/ll_design_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="25dp"
                        app:layout_constraintTop_toBottomOf="@id/vp_image">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:visibility="gone"
                                android:button="@drawable/selector_ic_like"
                                android:id="@+id/cb_like"
                                android:layout_width="24dp"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_name"
                                style="@style/BoldText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_weight="1"
                                tools:text="test3"
                                android:text="@{res.expertName}"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/tv_design_name"
                            style="@style/BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            tools:text="디자인 이름"
                            android:text="@{res.reformName}"
                            android:textSize="24dp" />

                        <TextView
                            android:id="@+id/tv_design_price"
                            style="@style/BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            tools:text="20.0000원"
                            wonText="@{res.price}"
                            android:textColor="@color/sky_3"
                            android:textSize="24dp" />

                        <TextView
                            style="@style/NormalText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            tools:text="description"
                            android:text="@{res.contents}"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_prepare_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="25dp"
                        app:layout_constraintTop_toBottomOf="@id/ll_design_info">

                        <TextView
                            style="@style/BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="준비물"
                            android:textSize="20dp" />

                        <TextView
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="갖고있는 준비물 중 한가지를 골라 리폼할 수 있어요"
                            android:textSize="14dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:overScrollMode="never"
                            android:id="@+id/rv_prepare_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="vertical"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_before_after"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="24dp"
                        app:layout_constraintTop_toBottomOf="@id/ll_prepare_item">

                        <TextView
                            style="@style/BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이렇게 변했어요"
                            android:textSize="20dp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_before"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginEnd="2.5dp"
                                android:elevation="0dp"
                                app:cardCornerRadius="8dp"
                                app:layout_constraintDimensionRatio="159:220"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/cv_after"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/iv_before"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/test_img" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_after"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="2.5dp"
                                android:elevation="0dp"
                                app:cardCornerRadius="8dp"
                                app:layout_constraintDimensionRatio="159:220"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/cv_before"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/iv_after"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/test_img" />
                            </androidx.cardview.widget.CardView>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_circle_white_stroke_black"
                                android:translationZ="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_arr_right"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_warning"
                        android:padding="25dp"
                        app:layout_constraintTop_toBottomOf="@id/ll_before_after"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:text="이렇게 진행돼요"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24dp"
                                android:text="1"/>
                            <TextView
                                android:layout_marginStart="12dp"
                                style="@style/NormalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="변화를 주고싶은 의류를 준비해주세요.\n옷, 신발, 가방, 파우치 무엇이든 좋아요!"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24dp"
                                android:text="2"/>
                            <TextView
                                android:layout_marginStart="12dp"
                                style="@style/NormalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="세부항목을 작성하고 리폼을 신청해주세요."/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24dp"
                                android:text="3"/>
                            <TextView
                                android:layout_marginStart="12dp"
                                style="@style/NormalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="1:1 상담을 통해 더욱 자세한 상담이 가능해요."/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_more"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/bg_round_8dp_stroke_gray_1">

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_order_info"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/ll_warning"
                        android:layout_marginTop="12dp"
                        android:padding="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="리폼 소요시간"/>
                        <TextView
                            android:layout_marginTop="8dp"
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="택배 수령 후 2-5일정도의 제작기간이 소요됩니다. 제작 완료 시 택배사 사정에 따라 배송시간이 달라질 수 있습니다."/>

                        <TextView
                            android:layout_marginTop="32dp"
                            style="@style/BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="교환 및 환불정보"/>
                        <TextView
                            android:layout_marginTop="8dp"
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="교환 및 환불에 대한 사항은 디자이너님과 상의하여 확인해주세요."
                            android:textSize="14dp"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_order"
                        app:layout_constraintTop_toBottomOf="@id/ll_order_info"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="48dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_8dp_white"
                        android:text="리폼 신청하기"
                        app:backgroundTint="@color/sky_3"
                        android:textColor="@android:color/white"
                        style="@style/BoldText"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"/>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/bg_round_8dp_white"
                        android:backgroundTint="#66101010"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/vp_image">

                        <TextView
                            android:id="@+id/tv_banner_current"
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(vm.currentImageIdx)}"
                            android:textColor="@android:color/white" />

                        <TextView
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_banner_total"
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="10"
                            android:text="@{String.valueOf(vm.totalImageCnt)}"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>
