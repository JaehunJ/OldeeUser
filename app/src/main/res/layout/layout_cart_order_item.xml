<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.oldeee.user.network.response.BasketListItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_title"
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="변화주기"
            android:textSize="20dp"
            tools:text="오래쓰기" />

        <LinearLayout
            android:id="@+id/ll_sub"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sub_title"
                style="@style/BoldText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@{data.reformName}"
                tools:text="바지수선" />

            <LinearLayout
                android:id="@+id/ll_check"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/cb_sub"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/selector_sign_up_checkbox"
                    android:clickable="false"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:id="@+id/ll_prepare_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_prepare_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NormalText"
                android:text="@{data.itemName}"
                android:textSize="16dp"
                tools:text="신발"/>
            <TextView
                android:layout_marginStart="8dp"
                style="@style/BoldText"
                android:textColor="@color/sky_3"
                android:id="@+id/tv_price"
                wonText="@{Integer.valueOf(data.reformPrice)}"
                tools:text="20,000원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>
</layout>
