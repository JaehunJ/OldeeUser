<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="36dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/BoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="접근권한안내"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_contents"
            style="@style/NormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/gray_7"
            android:text="정보통신망법령에 따라 꼭 필요한 항목만 필수 접근 합니다."
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_container"
            app:layout_constraintTop_toBottomOf="@id/tv_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_cam"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_popup_cam"/>
                <TextView
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/iv_cam"
                    app:layout_constraintTop_toTopOf="@id/iv_cam"
                    app:layout_constraintBottom_toBottomOf="@id/iv_cam"
                    android:textSize="16dp"
                    android:textColor="@color/black_0"
                    style="@style/BoldText"
                    android:id="@+id/tv_cam_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카메라 (선택)"/>

                <TextView
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/iv_cam"
                    app:layout_constraintTop_toBottomOf="@id/tv_cam_title"
                    android:textSize="16dp"
                    android:textColor="@color/black_0"
                    style="@style/NormalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품 등록, 글 작성 및 프로필 이미지 첨부"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_pic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_popup_cam"/>
                <TextView
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/iv_pic"
                    app:layout_constraintTop_toTopOf="@id/iv_pic"
                    app:layout_constraintBottom_toBottomOf="@id/iv_pic"
                    android:textSize="16dp"
                    android:textColor="@color/black_0"
                    style="@style/BoldText"
                    android:id="@+id/tv_pic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진/미디어/파일 (선택)"/>

                <TextView
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/iv_pic"
                    app:layout_constraintTop_toBottomOf="@id/tv_pic_title"
                    android:textSize="16dp"
                    android:textColor="@color/black_0"
                    style="@style/NormalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품 등록, 글 작성 및 프로필 이미지 첨부"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="확인"
            app:layout_constraintTop_toBottomOf="@id/ll_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ButtonRoundSky"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
