<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.oldeee.user.ui.signup.SignUpViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/sky_1"
        tools:context=".ui.signup.SignUpFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/iv_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginStart="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arr_left"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="회원가입"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="32dp"
                    style="@style/BoldText"
                    android:textSize="20dp"
                    android:text="닉네임"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginTop="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/bg_round_8dp_stroke_gray_1"
                    android:text="@={vm.nickName}"
                    style="@style/NormalText"
                    android:textSize="16dp"
                    android:textColorHint="@color/gray_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="닉네임을 입력하세요"/>

                <TextView
                    android:visibility="gone"
                    style="@style/NormalText"
                    android:textSize="16dp"
                    android:textColor="@color/blush_3"
                    android:id="@+id/tv_error_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사용 중인 닉네임입니다."
                    tools:text="사용 중인 닉네임입니다."/>

                <TextView
                    android:layout_marginTop="32dp"
                    style="@style/BoldText"
                    android:textSize="20dp"
                    android:text="이메일"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_mail"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/bg_round_8dp_stroke_gray_1"
                        android:text="@={vm.email}"
                        android:layout_weight="199"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <android.widget.Button
                        android:visibility="gone"
                        android:id="@+id/btn_code"
                        style="@style/NormalText"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/sky_3"
                        android:background="@drawable/bg_round_8dp_white"
                        android:stateListAnimator="@null"
                        android:layout_width="0dp"
                        android:layout_weight="120"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="인증번호받기"/>
                </LinearLayout>

                <EditText
                    android:visibility="gone"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/bg_round_8dp_stroke_gray_1"
                    android:text="@={vm.emailCode}"
                    android:layout_marginTop="6dp"
                    style="@style/NormalText"
                    android:textSize="16dp"
                    android:textColorHint="@color/gray_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="인증번호를 입력해주세요."/>

                <TextView
                    android:visibility="gone"
                    style="@style/NormalText"
                    android:textSize="16dp"
                    android:textColor="@color/blush_3"
                    android:id="@+id/tv_error_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="인증번호를 다시 입력해주세요."
                    tools:text="인증번호를 다시 입력해주세요."/>

                <TextView
                    android:layout_marginTop="32dp"
                    style="@style/BoldText"
                    android:textSize="20dp"
                    android:text="휴대폰"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_marginTop="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/bg_round_8dp_stroke_gray_1"
                    android:text="@={vm.phone}"
                    style="@style/NormalText"
                    android:textSize="16dp"
                    android:textColorHint="@color/gray_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="닉네임을 입력하세요"/>

                <LinearLayout
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:id="@+id/ll_service"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <CheckBox
                            android:checked="@={vm.checkService}"
                            android:id="@+id/cb_service"
                            android:background="@drawable/selector_sign_up_checkbox"
                            android:button="@android:color/transparent"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>

                        <TextView
                            android:layout_marginStart="8dp"
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:text="서비스 이용약관(필수)"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_show_term_service"
                        android:textAlignment="textEnd"
                        android:layout_marginStart="8dp"
                        style="@style/NormalText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="16dp"
                        android:textColor="@color/sky_3"
                        android:text="보기"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/ll_info"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <CheckBox
                            android:checked="@={vm.checkPrivacy}"
                            android:id="@+id/cb_info"
                            android:background="@drawable/selector_sign_up_checkbox"
                            android:button="@android:color/transparent"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>

                        <TextView
                            android:layout_marginStart="8dp"
                            style="@style/NormalText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:text="개인정보 수집 및 이용 동의(필수)"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_show_term_info"
                        android:textAlignment="textEnd"
                        android:layout_marginStart="8dp"
                        style="@style/NormalText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="16dp"
                        android:textColor="@color/sky_3"
                        android:text="보기"/>

                </LinearLayout>

                <android.widget.Button
                    android:id="@+id/btn_confirm"
                    android:elevation="0dp"
                    android:layout_marginTop="32dp"
                    android:stateListAnimator="@null"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="16dp"
                    android:minHeight="0dp"
                    style="@style/NormalText"
                    android:backgroundTint="@color/sky_3"
                    android:background="@drawable/bg_round_8dp_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Oldee 시작하기"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>
