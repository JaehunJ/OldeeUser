<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_design_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="25dp"
            app:layout_constraintTop_toBottomOf="@id/vp_image">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sf_main_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_like"
                            android:layout_width="24dp"
                            android:layout_height="0dp"
                            android:button="@drawable/skeleton_circle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/BoldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/skeleton_rect_8dp"
                            android:text="123123123"
                            android:textColor="@android:color/transparent"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_design_name"
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="디자인 이름"
                        android:textColor="@android:color/transparent"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/tv_design_price"
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="20.0000원"
                        android:textColor="@android:color/transparent"
                        android:textSize="24dp" />

                    <TextView
                        style="@style/NormalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="description"
                        android:textColor="@android:color/transparent" />
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_prepare_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="25dp"
            app:layout_constraintTop_toBottomOf="@id/ll_design_info">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sf_prepare_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="준비물"
                        android:textColor="@android:color/transparent"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/NormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="갖고있는 준비물 중 한가지를 골라 리폼할 수 있어요"
                        android:textColor="@android:color/transparent"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical">

                        <include layout="@layout/skeleton_refom_detail_prepare_item" />

                        <include layout="@layout/skeleton_refom_detail_prepare_item" />
                    </LinearLayout>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_before_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/ll_prepare_item">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sf_before_after"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="이렇게 변했어요"
                        android:textColor="@android:color/transparent"
                        android:textSize="20dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_before"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="2.5dp"
                            android:elevation="0dp"
                            app:cardCornerRadius="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="159:220"
                            app:layout_constraintEnd_toStartOf="@id/cv_after"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/iv_before"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/skeleton_rect_8dp"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_after"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="2.5dp"
                            android:elevation="0dp"
                            app:cardCornerRadius="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="159:220"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/cv_before"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/iv_after"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/skeleton_rect_8dp"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/skeleton_rect_8dp"
                            android:translationZ="2dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/skeleton_rect_8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="25dp"
            app:layout_constraintTop_toBottomOf="@id/ll_before_after">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sf_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="이렇게 진행돼요"
                        android:textColor="@android:color/transparent"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skeleton_rect_8dp"
                            android:text="변화를 주고싶은 의류를 준비해주세요\n옷, 신발, 가방, 파우치 무엇이든 좋아요!"
                            android:textColor="@android:color/transparent"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skeleton_rect_8dp"
                            android:text="세부항목을 작성하고 리폼을 신청해주세요."
                            android:textColor="@android:color/transparent"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skeleton_rect_8dp"
                            android:text="1:1 상담을 통해 더욱 자세한 상담이 가능해요."
                            android:textColor="@android:color/transparent"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_8dp_stroke_gray_1"
                        android:gravity="center"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="25dp"
            app:layout_constraintTop_toBottomOf="@id/ll_warning">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sf_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="리폼 소요시간"
                        android:textColor="@android:color/transparent"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/NormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="택배 수령 후 2-5일정도의 제작기간이 소요됩니다. 제작 완료 시 택배사 사정에 따라 배송시간이 달라질 수 있습니다."
                        android:textColor="@android:color/transparent"
                        android:textSize="14dp" />

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="교환 및 환불정보"
                        android:textColor="@android:color/transparent"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/NormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/skeleton_rect_8dp"
                        android:text="교환 및 환불에 대한 사항은 디자이너님과 상의하여 확인해주세요."
                        android:textColor="@android:color/transparent"
                        android:textSize="14dp" />
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>

        <android.widget.Button

            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/skeleton_rect_8dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:text="리폼 신청하기"
            android:textColor="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_order_info" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vp_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sf_main_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/v_main"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/gray_1"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="25dp"
                        android:background="@drawable/skeleton_circle"
                        android:elevation="0dp"
                        android:outlineProvider="@null"
                        android:translationZ="1dp"
                        app:layout_constraintBottom_toBottomOf="@id/v_main"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/v_main" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_round_8dp_white"
            android:backgroundTint="#66101010"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/vp_image"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_banner_current"
                style="@style/NormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white" />

            <TextView
                style="@style/NormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_banner_total"
                style="@style/NormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


