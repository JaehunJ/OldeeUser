<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@color/sky_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.orderlog.detail.OrderLogDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/iv_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginStart="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arr_left"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="주문내역상세"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:visibility="gone"
                    android:padding="24dp"
                    android:id="@+id/ll_warning"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF9F9">
                    <TextView
                        style="@style/BoldText"
                        android:textColor="@color/blush_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        tools:text="전문가의 주소로 신청한 나의 의류 품목을 각각 택배로 보내주세요! "/>
                    <TextView
                        android:layout_marginTop="6dp"
                        style="@style/NormalText"
                        android:textColor="@color/blush_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        tools:text="주문 후 3일 이내 발송해주세요. 전문가 상품 수령 후 작업이 시작됩니다."/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_sub"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:background="@color/white"
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/BoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="내 배송지정보"/>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/NormalText"
                            android:layout_width="0dp"
                            android:layout_weight="105"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="수령인"/>
                        <TextView
                            style="@style/NormalText"
                            android:layout_weight="215"
                            android:id="@+id/tv_user_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            tools:text="수령인"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/NormalText"
                            android:layout_width="0dp"
                            android:layout_weight="105"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="휴대폰"/>
                        <TextView
                            style="@style/NormalText"
                            android:layout_weight="215"
                            android:id="@+id/tv_user_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            tools:text="01000100011"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/NormalText"
                            android:layout_width="0dp"
                            android:layout_weight="105"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="주소"/>
                        <TextView
                            style="@style/NormalText"
                            android:layout_weight="215"
                            android:id="@+id/tv_user_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            tools:text="서울시 관악구"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="24dp"
                    android:background="@color/white"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="160"
                        android:textSize="20dp"
                        android:text="결제 금액"/>
                    <TextView
                        android:textSize="20dp"
                        android:textAlignment="textEnd"
                        android:id="@+id/tv_price"
                        style="@style/BoldText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="160"
                        tools:text="50,000원"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="24dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="결제 수단"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:textSize="14dp"
                        android:textAlignment="textEnd"
                        android:id="@+id/tv_payments"
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="신한(123********2333) 일시불"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
