<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="data"
            type="com.oldeee.user.network.response.SurveySeqListItem" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:text="@{data.orderDetailNum}"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="24dp"
            style="@style/NormalText"
            android:id="@+id/tv_date"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_0"
            tools:text="2021.08.21"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">
            <include android:id="@+id/ll_item"
                layout="@layout/layout_order_log_sub_item"/>
        </LinearLayout>

        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/sky_1"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="24dp">
            <TextView
                android:text="전문가 배송지 정보"
                style="@style/BoldText"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_0" />

            <TableLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/NormalText"
                        android:textSize="14dp"
                        android:text="수령인"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        style="@style/NormalText"
                        android:layout_weight="2"
                        tools:text="심지현"
                        android:textSize="14dp"
                        android:text="@{data.expertName}"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="12dp">
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        style="@style/NormalText"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:text="휴대폰"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        style="@style/NormalText"
                        android:layout_weight="2"
                        tools:text="010-1234-5678"
                        android:textSize="14dp"
                        android:text="@{data.expertPhone}"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="12dp">
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        style="@style/NormalText"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:text="주소"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        style="@style/NormalText"
                        android:layout_weight="2"
                        tools:text="서울시 종로구 광화문로, 233-40 (광화문 타워) 101-1234호"
                        android:textSize="14dp"
                        android:text="@{data.storeAddress}"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/sky_1"/>
    </LinearLayout>
</layout>
