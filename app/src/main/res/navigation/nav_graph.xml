<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.oldeee.user.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.oldeee.user.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_designListFragment"
            app:destination="@id/designListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_orderLogFragment"
            app:destination="@id/orderLogFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_homeFragment_to_reformDetailFragment"
            app:destination="@id/reformDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.oldeee.user.ui.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/designListFragment"
        android:name="com.oldeee.user.ui.design.DesignListFragment"
        android:label="DesignListFragment"
        tools:layout="@layout/fragment_design_list">
        <action
            android:id="@+id/action_designListFragment_to_reformDetailFragment"
            app:destination="@id/reformDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/reformDetailFragment"
        android:name="com.oldeee.user.ui.design.detail.ReformDetailFragment"
        android:label="ReformDetailFragment"
        tools:layout="@layout/fragment_reform_detail">
        <action
            android:id="@+id/action_reformDetailFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.oldeee.user.ui.design.add.AddCartFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_add_cart">
        <argument
            android:name="reformInfo"
            app:argType="com.oldeee.user.network.response.DesignDetailData" />
    </fragment>
    <fragment
        android:id="@+id/orderLogFragment"
        android:name="com.oldeee.user.ui.orderlog.OrderLogFragment"
        android:label="OrderLogFragment"
        tools:layout="@layout/fragment_order_log"/>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.oldeee.user.ui.cart.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cartFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_cartFragment"
        app:destination="@id/cartFragment"
        app:enterAnim="@anim/nav_default_enter_anim" />
    <action
        android:id="@+id/action_global_orderLogFragment"
        app:destination="@id/orderLogFragment" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.oldeee.user.ui.signup.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="snsId"
            app:argType="string" />
        <argument
            android:name="phone"
            app:argType="string" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_notice_list"
        android:id="@+id/noticeListFragment"
        android:name="com.oldeee.user.ui.notice.NoticeListFragment"
        android:label="NoticeListFragment" />
    <action
        android:id="@+id/action_global_noticeListFragment"
        app:destination="@id/noticeListFragment" />
    <fragment
        tools:layout="@layout/fragment_payment"
        android:id="@+id/paymentFragment"
        android:name="com.oldeee.user.ui.payment.PaymentFragment"
        android:label="PaymentFragment" >
        <argument
            android:name="datas"
            app:argType="com.oldeee.user.network.response.BasketListItem[]" />
        <action
            android:id="@+id/action_paymentFragment_to_paymentDoneFragment"
            app:destination="@id/paymentDoneFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_payment_done"
        android:id="@+id/paymentDoneFragment"
        android:name="com.oldeee.user.ui.payment.done.PaymentDoneFragment"
        android:label="PaymentDoneFragment" />
    <fragment
        android:id="@+id/orderLogDetailFragment"
        android:name="com.oldeee.user.ui.orderlog.detail.OrderLogDetailFragment"
        android:label="OrderLogDetailFragment"
        tools:layout="@layout/fragment_order_log_detail">
        <argument android:name="orderId"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_global_orderLogDetailFragment"
        app:destination="@id/orderLogDetailFragment" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.oldeee.user.ui.setting.SettingFragment"
        android:label="SettingFragment" />
    <action
        android:id="@+id/action_global_settingFragment"
        app:destination="@id/settingFragment" />
</navigation>